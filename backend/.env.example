# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
# Local: mongodb://localhost:27017/shopify-uae-pass
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/shopify-uae-pass
DB_NAME=shopify_uae_pass

# ============================================
# SHOPIFY CONFIGURATION
# ============================================
# Get these from your Shopify app settings
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_STORE_NAME=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# Scopes required for the app
# write_orders - Create and update orders
# read_customers - Read customer information
# write_customers - Update customer information
# write_products - Create and update products
# read_products - Read product information
SHOPIFY_SCOPES=write_orders,read_customers,write_customers,write_products,read_products

# ============================================
# UAE PASS CONFIGURATION
# ============================================
# These will be provided after enrollment
# For now, use placeholder values
UAEPASS_CLIENT_ID=your_client_id_here
UAEPASS_CLIENT_SECRET=your_client_secret_here
UAEPASS_CALLBACK_URL=http://localhost:5000/auth/callback
UAEPASS_SIGNING_CERT_PATH=./certs/uae-pass-cert.pem
UAEPASS_API_URL=https://api.uaepass.ae
UAEPASS_ENVIRONMENT=sandbox

# ============================================
# JWT CONFIGURATION
# ============================================
# Secret key for signing JWT tokens
# Use a strong, random string (min 32 characters)
# Generate: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_min_32_characters_long
JWT_EXPIRE=7d

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# For Gmail: Use App Password, not regular password
# Enable 2FA in Gmail and create App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourapp.com

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760
# Directory to store uploaded files
UPLOAD_DIR=./uploads
# Allowed file types (comma-separated extensions)
ALLOWED_FILE_TYPES=pdf,doc,docx

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000
